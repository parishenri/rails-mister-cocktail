<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>New cocktail</h1>
      <hr>
      <%= simple_form_for @cocktail do |f| %>
        <div class="form-group">
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, "add a cocktail", class: "btn-medium"%>
        </div>
      <% end %>
      <%= link_to 'back', cocktails_path(@cocktail) %>
    </div>
  </div>
</div>
