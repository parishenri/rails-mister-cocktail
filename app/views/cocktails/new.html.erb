<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>New cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
        <div class="form-group">
        <%= f.input :name %>
        <%= f.button :submit %>
        </div>
      <% end %>
      <%= link_to 'back', cocktails_path(@cocktail) %>
    </div>
  </div>
</div>
