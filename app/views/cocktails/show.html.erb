<div class="container">
  <h1><%= @cocktail.name %></h1>

  <% @cocktail.doses.each do |dose| %>
  <ul>
    <li>
      <p><%= dose.description %> - <%= dose.ingredient.name %></p>
    </li>
  </ul>
  <%= link_to 'delete', dose_path(dose), method: :delete %>
  <% end %>

  <%= link_to 'back', cocktails_path %>
  <%= link_to 'add dose', new_cocktail_dose_path(@cocktail) %>
</div>
