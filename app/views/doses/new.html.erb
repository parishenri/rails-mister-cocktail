<div class="container">
  <div class="content-new">
    <div>
      <%= cl_image_tag @cocktail.photo, height: 500, width: 500, crop: :fill %>
    </div>
    <div class="form-dose">
      <h1>New dose</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.button :submit, "add a new dose", class: "btn-medium"%>
      <% end %>
      <br>
    </div>
  </div>
      <%= link_to 'back', cocktail_path(@cocktail) %>
</div>
